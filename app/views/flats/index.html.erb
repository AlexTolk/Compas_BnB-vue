<div class="banner">

  <div class="bg-no-repeat bg-cover bg-right-bottom h-96 text-white py-24 px-10 object-fill -m-2 mb-8" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://a0.muscache.com/im/pictures/miso/Hosting-42637728/original/f7bfd23a-2b60-49a0-a6fb-5680eccf1ba1.jpeg?im_w=720)">
    <div>
      <p class="text-3xl font-bold">Find deals for any season</p>
      <p class="text-2xl font-medium">From cozy homes to treehouses!</p>
      <p class="text-xl">We have a place for everyone</p>
    </div>
    <%= render 'flats/form' %>


  </div>



<div class="container">

  

  <div class="container flex grid grid-cols-4 gap-4 object-contain mx-auto flex flex-wrap gap-4">
    <% @flats.each do |flat| %>
      <div class="rounded-lg shadow-lg bg-white max-w-sm relative">
        <%= link_to flat_path(flat) do %>
          <div>
            <img class="rounded-t-lg" src="https://mdbootstrap.com/img/new/standard/nature/184.jpg" alt=""/>
            <i class="fas fa-heart absolute top-2 -right-14 h-20 w-20 text-white hover:text-pink"></i>
            <div class="p-6 relative">
              <div class="flex justify-start">
                <i class="fa-solid fa-star absolute top-2 right-2 text-xs space-x-0 hover:text-pink"><%= flat.avg_rating.round(1) %></i>
              </div>
              <h5 class="text-gray-900 font-medium mb-2"><%= flat.name %></h5>
              <h5 class="text-gray-900 text-lg font-medium mb-2">City: Shanghai</h5>
              <h5 class="text-gray-900 text-base font-medium mb-2">Location: <%= flat.description %></h5>
              <h5 class="text-gray-900 text-sm font-bold mb-2">Price: $<%= flat.price %></h5>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
