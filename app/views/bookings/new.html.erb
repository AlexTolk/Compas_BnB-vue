
<!-- Header -->
<div class="bg-white-200 py-4 px-6 rounded-lg text-teal flex justify-center items-center text-2xl">
  <div class="flex items-center flex-wrap justify-center font-bold">Your Dream Awaits</div>
</div>
<!-- Left side of the page -->
  <div class="flex">

    <div class="container flex grow">
      <div class="mr-10">
      <%# Your Trip Card %>
        <div class="mt-4 flex-1">
          <div class="block p-6 rounded-lg shadow-lg bg-light_teal">
            <h5 class="text-pink text-xl leading-tight font-semibold mb-2">Your trip</h5>
              <div class="flex">
                <div>
                  <h6 class="text-teal font-bold text-base mb-4">Dates</h6>
                  <div>
                    <div class="flex items-center justify-center">
                      <%= month_calendar do |date| %>
                        <%= date.day %>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
          </div>
        </div>
      <%# Message Host %>
        <form>
          <div class="mt-4 rounded-lg bg-light_teal">
              <div class="px-4 py-2 bg-light_teal rounded-t-lg">
                  <label class="text-teal font-bold text-base">Message your host</label>
                  <textarea rows="4" class="w-full px-0 text-sm bg-white border-0 bg-light_teal focus:ring-0 dark:text-black"></textarea>
              </div>
              <div class="flex items-center justify-between px-3 py-2 border-t dark:border-teal">
                  <button type="submit" class="inline-flex items-center py-2.5 px-4 text-xs font-medium text-center font-semibold text-white bg-pink rounded-lg hover:bg-teal">
                      Send
                  </button>
              </div>
          </div>
        </form>
      <%# Cancellation Policy %>
        <div class="mt-4">
          <div class="block p-6 rounded-lg shadow-lg bg-light_teal">
            <h5 class="text-teal text-base font-bold mb-2">Cancellation Policy</h5>
            <p class="text-black text-base mb-4">
              <strong>Free cancellation for 48 hours.</strong>
              After that, cancel before 3:00 PM and get a 50% refund, minus the service fee.
            </p>
          </div>
        </div>
      <%# Ground Rules %>
        <div class="mt-4">
          <div class="block p-6 rounded-lg shadow-lg bg-light_teal">
            <h5 class="text-teal text-base font-bold mb-2">Ground Rules</h5>
            <p class="text-black text-base mb-4">
            Everyone who is part of our community is required to stick to these simple rules for being a great guest:
              <ul class="marker:text-pink list-disc ml-6 ">
                <li class="text-black">
                  Treat your Host’s home like your own
                </li>
                <li>
                  Follow the Host’s house rules
                </li>
                <li>
                  Communicate promptly with the Host if issues come up
                </li>
              </ul>
            </p>
          </div>
        </div>

        <div class="mt-4">
          <button type="button" class="inline-block px-10 py-2.5 bg-pink text-white font-semibold text-sm leading-tight uppercase rounded shadow-lg hover:bg-teal hover:shadow-lg transition" data-bs-toggle="modal" data-bs-target="#exampleModal">Confirm and Pay</button>
      </div>
    </div>

     <%# Sticky Card %>
    <div>
      <div class="flex justify-start mt-4 sticky top-10 h-fit">
        <div class="rounded-lg shadow-lg bg-light_teal max-w-sm">
          <a href="#">
            <img class="rounded-t-lg" src="https://mdbootstrap.com/img/new/standard/nature/184.jpg"/>
          </a>
          <div class="flex grow">
            <div class="p-6">
              <h5 class="text-teal text-lg font-semibold mb-2">Name: </h5>
              <h5 class="text-teal text-base font-semibold mb-2">Location: </h5>
                <div class="">
                  <h5 class="text-teal text-base font-semibold mb-2">Total:</h5>
                </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


