<div class="h-screen">
<div class="block p-6 mx-auto mt-10 mb-10 rounded-lg shadow-lg bg-white max-w-sm">
  <h2>Edit <%= resource_name.to_s.humanize %></h2>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),
  data: {turbo: false}) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field">
      <%= f.label :first_name %><br />
      <%= f.input_field :first_name, class:"border border-black rounded-md", autofocus: true, autocomplete: "first-name"%>
    </div>
    <div class="field">
      <%= f.label :last_name %><br />
      <%= f.input_field :last_name, class:"border border-black rounded-md", autofocus: true, autocomplete: "last-name" %>
    </div>
    <div class="field">
      <%= f.label :phone_number %><br />
      <%= f.input_field :phone_number, autofocus: true, class:"border border-black rounded-md", autocomplete: "phone-number" %>
    </div>
    <div class="field">
      <%= f.label :emergency_contact %><br />
      <%= f.input_field :emergency_contact, class:"border border-black rounded-md", autofocus: true, autocomplete: "emergency-contact" %>
    </div>
    <div class="field">
      <%= f.label :avatar %><br />
      <%= f.input_field :avatar, autofocus: true, autocomplete: "avatar", as: :file %>
    </div>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class:"border border-black rounded-md", autocomplete: "email" %>
    </div>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
    <div class="field">
      <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, class:"border border-black rounded-md", autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, class:"border border-black rounded-md", autocomplete: "new-password" %>
    </div>
    <div class="field">
      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>
    <div class="btn bg-pink hover:bg-teal text-white text-center mt-4">
      <%= f.submit "Update" %>
    </div>
  <% end %>
  <div class="mt-2 mb-2 border-t border-teal border-b border-teal">
    <h4>Cancel my account</h3>
    <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
  </div>
  <div class="btn bg-teal-100">
    <%= link_to pages_profile_path do %>
      <i class="fa-sharp fa-solid fa-left-long"></i>
    <% end %>
  </div>
</div>

</div>
